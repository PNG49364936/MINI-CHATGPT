<div data-controller="chat" class="chat-container">
  <h1>ChatGPT</h1>
  <section data-chat-target="conversation" class="chat-conversation">
  </section>
  <%= form_with data: { action: "chat#generateResponse" } do |form| %>
    <div class="chat-input">
     <%= form.text_area :message, id: 'prompt',
                   data: { chat_target: "prompt" },
                   value: "Question : " %>
      <%= form.submit 'Send' %>
     <%= button_tag 'Clear', type: 'button', class: "btn btn-red", data: { action: "click->chat#clearConversation" } %>
    <%= button_tag 'Print', type: 'button', class: "btn btn-green", data: { action: "chat#printConversation" } %>
    </div>
  <% end %>
</div>
